{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Hotels Micro Services Pipeline Setup",
  "description": "Deployment of the Hotels Micro Services",
  "longDescription": "The Delivery Pipeline for DevOps Services allows you to automate your continuous deployment setup. To avoid conflicts, make sure to use unique application names. We recommend to use a common prefix like your name or initials.",
  "type": "object",
  "properties": {
    "selected-region": {
      "description": "The Bluemix region",
      "type": "string"
    },
    "selected-organization": {
      "description": "The Bluemix org",
      "type": "string"
    },
   "selected-space": {
      "description": "The Bluemix space",
      "type": "string"
    },
    "erp-app-name": {
      "description": "Name of the ERP API",
      "type": "string"
    },
   "controller-app-name": {
      "description": "Name of the controller app",
      "type": "string"
    },
    "webui-app-name": {
      "description": "Name of the WEBUI App",
      "type": "string"
    },
    "openwhisk_auth": {
      "type": "string"
    }
  },
  "required": ["selected-region", "selected-organization", "selected-space", "micro-ui-app-name", "micro-starrating-app-name", "micro-hotels-app-name","micro-location-app-name"],
  "form": [
   {
      "type": "validator",
      "url": "/devops/setup/bm-helper/helper.html"
   },
   {
      "type": "text",
      "readonly": false,
      "title": "Micro UI App Name",
      "key": "micro-ui-name"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Micro Starrating App Name",
      "key": "micro-starrating-app-name"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Micro Hotels App Name",
      "key": "micro-hotels-app-name"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Micro Location App Name",
      "key": "micro-location-app-name"
    },

    {
      "type": "table",
      "columnCount": 4,
      "widths": ["20%", "20%", "20%", "20%"],
      "items": [
        {
          "type": "label",
          "title": "Region"
        },
        {
          "type": "label",
          "title": "Organization"
        },
        {
          "type": "label",
          "title": "Space"
        },
        {
          "type": "select",
          "key": "selected-region"
        },
        {
          "type": "select",
          "key": "selected-organization"
        },
        {
          "type": "select",
          "key": "selected-space",
          "readonly": false
        }
      ]
    }
  ]
}
